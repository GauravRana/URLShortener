<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>trim</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>TrimServlet</servlet-name>
    <servlet-class>com.mohit.web.urlshortner.servlet.TrimServlet</servlet-class>
    <init-param>
      <param-name>maintenance</param-name>
      <param-value>false</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>ShortnerServlet</servlet-name>
    <servlet-class>com.mohit.web.urlshortner.servlet.ShortnerServlet</servlet-class>
    <init-param>
      <param-name>db</param-name>
      <param-value>jdbc:mysql://localhost:3306/url_shortener</param-value>
    </init-param>
    <init-param>
      <param-name>db_user</param-name>
      <param-value>root</param-value>
    </init-param>
    <init-param>
      <param-name>db_passwd</param-name>
      <param-value>gaurav</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>SnippetServlet</servlet-name>
    <servlet-class>com.mohit.web.urlshortner.servlet.SnippetServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TrimServlet</servlet-name>
    <url-pattern>/TrimServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShortnerServlet</servlet-name>
    <url-pattern>/ShortnerServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SnippetServlet</servlet-name>
    <url-pattern>/SnippetServlet</url-pattern>
  </servlet-mapping>
</web-app>